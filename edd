pacman -Sy reflector
reflector --verbose --latest 15 --sort rate --save /etc/pacman.d/mirrorlist
pacstrap /mnt base base-devel linux-lts linux-lts-headers linux linux-headers linux-firmware dialog network-manager netctl wpa_supplicant wireless_tools xorg plasma-desktop sddm chromium firefox terminator
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt
ln -sf /usr/share/zoneinfo/Australia/Sydney /etc/localtime
hwclock --systohc
nano /etc/locale.gen (scroll down and remove the # on en_US.UTF-8 UTF-8)
locale-gen
nano /etc/locale.conf (LANG=en_US.UTF-8)
nano /etc/vconsole.conf (KEYMAP=us)
nano /etc/hostname (arch)
